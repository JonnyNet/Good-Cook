<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true"><shape>
            <corners android:radius="5dp" />

            <stroke android:width="1dp" android:color="#707171" />

            <solid android:color="#FFC155" />
            
            <padding android:left="3dp" android:top="3dp" android:right="3dp" android:bottom="3dp"/>
        </shape></item>
    <item android:state_pressed="false"><shape>
            <corners android:radius="5dp" />

            <stroke android:width="1dp" android:color="#FFA200" />

            <gradient android:angle="90" android:centerColor="#FFD791" android:endColor="#FFC155" android:startColor="#FFA200" />
            
            <padding android:left="3dp" android:top="3dp" android:right="3dp" android:bottom="3dp"/>
        </shape></item>
    <item android:state_focused="false" android:state_enabled="false"><shape>
            <corners android:radius="5dp" />

            <stroke android:width="1dp" android:color="#80707171" />

            <solid android:color="#50FEFEFE" />
            
            <padding android:left="3dp" android:top="3dp" android:right="3dp" android:bottom="3dp"/>
        </shape></item>

</selector>